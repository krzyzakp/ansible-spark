# {{ansible_managed}}
[Unit]
Description=Apache Spark Master Server
After=network.target
After=systemd-user-sessions.service
After=network-online.target
 
[Service]
User={{ spark_user }}
Type=forking
ExecStart={{ spark_path }}/sbin/start-master.sh
ExecStop={{ spark_path }}/sbin/stop-master.sh
TimeoutSec=30
Restart=on-failure
RestartSec=30
StartLimitInterval=350
StartLimitBurst=10
 
[Install]
WantedBy=multi-user.target
